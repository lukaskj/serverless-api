{
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf .build .serverless .webpackCache && mkdir .build",
    "copy": "cp .env .build/",
    "build": "yarn lint && tsc -p . && yarn copy",
    "offline": "yarn clean && yarn copy && serverless offline",
    "sls:package": "yarn clean && sls package",
    "sls:deploy": "yarn clean && yarn copy && serverless deploy",
    "sls:remove": "serverless remove",
    "sls:down": "serverless remove",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest tests",
    "test:watch": "jest tests --runInBand --collectCoverage false --watch",
    "local": "ts-node src/localServer.ts",
    "typeorm": "cross-env NODE_ENV=migration ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migrate": "yarn run typeorm migration:generate -n",
    "typeorm:run": "yarn run typeorm migration:run",
    "typeorm:revert": "yarn run typeorm migration:revert"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-decorators": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/body-parser": "^1.19.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-loader": "^8.2.2",
    "cache-loader": "^4.1.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "serverless": "^2.59.0",
    "serverless-offline": "^8.2.0",
    "serverless-webpack": "^5.5.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "multer": "^1.4.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "serverless-http": "^2.7.0",
    "typedi": "^0.10.0"
  }
